global inp
global index	- global inp and index for later use.
record = []       - this is a empty list                 
                
def new_student():		- function new_student
  while True:          - uses while loop       
    if len(record) > 20 :   					- checking if record reached it limits	                                     
      print("Student data limit exceeded!!")
      return
    data = [] 	- empty list named data
    try:  
      name = input("ENTER STUDENT NAME : ")
      reg_no = (input("ENTER STUDENT SR- CODE: ")		- user inputs for student information needed, uses try exception for age if the inputs are invalid it'll show										
      age = int(input("ENTER STUDENT AGE: "))				" you must input integer value "
      major = input("ENTER STUDENT MAJOR: ")
      email = input("ENTER STUDENT E-MAIL ID: ")
      address = input ("ENTER STUDENT ADDRESS: ")
    except ValueError:
      print("You must input integer value!")
      continue
    else:
      data.append(name)
      data.append(reg_no)
      data.append(age)				- appending or adding the information that user inputs into the data
      data.append(major)
      data.append(email)
      data.append(address)
      record.append(data)                 - after the user inputs the required information, it'll add the data list inside the record list.                         
      print("--------------------------")
      print("Student Data Inserted successfully")
      print("--------------------------")
    return


def display_student():                                            
  index = input("Enter index(From 0) to display student data: ")
  if int(index) == (len(record)):                                 
    print("Student data not found!!")
    display_student()
  else:
    print("----------------------")
    print("NAME: " + str(record[int(index)][0]))           
    print("SR-CODE: " + str(record[int(index)][1]))  
    print("AGE: " + str(record[int(index)][2]))
    print("MAJOR: " + str(record[int(index)][3]))
    print("EMAIL: " + str(record[int(index)][4]))
    print("ADDRESS: " + str(record[int(index)][5]))
    print("----------------------")
  
def update_student():                                              
  upd_index = input("Enter index(From 0) to update data: ")
  if int(upd_index) == (len(record)):
    print("Student data not found!!")
    update_student()                                                  
  else:
    new_name = input("ENTER NEW STUDENT NAME : ")
    new_reg_no = input("ENTER NEW STUDENT SR- CODE: ")
    new_age = input("ENTER NEW STUDENT AGE: ")
    new_major = input("ENTER NEW STUDENT MAJOR: ")
    new_email = input("ENTER NEW STUDENT E-MAIL ID: ")
    new_address = input ("ENTER NEW STUDENT ADDRESS: ")
    record[int(upd_index)][0] = new_name                              
    record[int(upd_index)][1] = new_reg_no
    record[int(upd_index)][2] = new_age
    record[int(upd_index)][3] = new_major
    record[int(upd_index)][4] = new_email
    record[int(upd_index)][5] = new_address
    print("----------------------")
    print("Student Data updated successfully")
    print("----------------------")
